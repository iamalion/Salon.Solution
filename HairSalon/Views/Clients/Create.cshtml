@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<div class="container">
  <h1>Add a New Client</h1>
</div>
<hr />
<p class="center">NOTE: You need to have at least one stylist before you can add a client!</p>
<p class="center">Go to @Html.ActionLink("this page", "Create", "Stylist") to create a stylist.</p>
<hr />

@using (Html.BeginForm())
{ <div class="form-container">
    <div>
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name)
    </div>
    <div>
      @Html.LabelFor(model => model.Stylist)
      @Html.DropDownList("StylistId")
    </div>
  </div>
  <div class="center">
    <input type="submit" value="Add Client" class="btn btn-primary" />
  </div>
}
<div class="center">
  <p>@Html.ActionLink("Show all Clients", "Index")</p>
</div>